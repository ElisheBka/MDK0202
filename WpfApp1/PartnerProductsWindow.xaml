<Window x:Class="WpfApp1.PartnerProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Предлагаемая продукция" Height="500" Width="800"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Предлагаемая продукция для: " FontSize="14" FontWeight="Bold"/>
            <TextBlock x:Name="txtPartnerName" FontSize="14" FontWeight="Bold" Foreground="Blue"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button x:Name="btnCalculateMaterial" Content="Рассчитать материалы" 
                    Click="btnCalculateMaterial_Click" Margin="5" Padding="10,5"
                    Background="#FF3498DB" Foreground="White"
                    ToolTip="Рассчитать необходимое количество материалов для выбранного продукта"/>
            <Button x:Name="btnRefresh" Content="Обновить" Click="btnRefresh_Click" 
                    Margin="5" Padding="10,5"/>
            <Button x:Name="btnBack" Content="Назад" Click="btnBack_Click" 
                    Margin="5" Padding="10,5"/>
        </StackPanel>

        <!-- Список продукции -->
        <DataGrid Grid.Row="1" x:Name="dgProducts" AutoGenerateColumns="False" 
                 SelectionMode="Single" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="40"/>
                <DataGridTextColumn Header="Продукт" Binding="{Binding ProductName}" Width="200"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding TypeName}" Width="120"/>
                <DataGridTextColumn Header="Минимальная цена" Binding="{Binding MinPrice, StringFormat={}{0:N2} руб.}" Width="120"/>
                <DataGridTextColumn Header="Доступное количество" Binding="{Binding AvailableQuantity}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статусная строка -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="statusText" Text="Готово"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>