<Window x:Class="WpfApp1.PartnerFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавление партнера" Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Поля формы -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Тип партнера -->
                <GroupBox Header="Тип партнера *" Margin="0,0,0,10">
                    <ComboBox x:Name="cmbPartnerType" Height="25"/>
                </GroupBox>

                <!-- Наименование -->
                <GroupBox Header="Наименование компании *" Margin="0,0,0,10">
                    <TextBox x:Name="txtName" Height="25" MaxLength="200"
                            MouseEnter="TextBox_MouseEnter"/>
                </GroupBox>

                <!-- ФИО директора -->
                <GroupBox Header="ФИО директора *" Margin="0,0,0,10">
                    <TextBox x:Name="txtDirector" Height="25" MaxLength="100"
                            MouseEnter="TextBox_MouseEnter"/>
                </GroupBox>

                <!-- Адрес -->
                <GroupBox Header="Адрес *" Margin="0,0,0,10">
                    <TextBox x:Name="txtAddress" Height="25" MaxLength="300"
                            MouseEnter="TextBox_MouseEnter"/>
                </GroupBox>

                <!-- Рейтинг -->
                <GroupBox Header="Рейтинг *" Margin="0,0,0,10">
                    <TextBox x:Name="txtRating" Height="25" MaxLength="10"
                            PreviewTextInput="txtRating_PreviewTextInput"
                            MouseEnter="TextBox_MouseEnter"/>
                </GroupBox>

                <!-- Телефон -->
                <GroupBox Header="Телефон *" Margin="0,0,0,10">
                    <TextBox x:Name="txtPhone" Height="25" MaxLength="20"
                            MouseEnter="TextBox_MouseEnter"/>
                </GroupBox>

                <!-- Email -->
                <GroupBox Header="Email" Margin="0,0,0,15">
                    <TextBox x:Name="txtEmail" Height="25" MaxLength="100"
                            MouseEnter="TextBox_MouseEnter"/>
                </GroupBox>

                <TextBlock Text="* - обязательные поля" FontStyle="Italic" Foreground="Gray"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click" 
                    Margin="5" Padding="15,5" Background="#FF27AE60" Foreground="White"/>
            <Button x:Name="btnCancel" Content="Отмена" Click="btnCancel_Click" 
                    Margin="5" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>
