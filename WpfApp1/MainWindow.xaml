<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Управление партнерами" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Список партнеров" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button x:Name="btnRefresh" Content="Обновить" Click="btnRefresh_Click" Margin="5" Padding="10,5"
                    ToolTip="Обновить список партнеров"/>
            <Button x:Name="btnAdd" Content="Добавить партнера" Click="btnAdd_Click" Margin="5" Padding="10,5"
                    ToolTip="Добавить нового партнера"/>
            <Button x:Name="btnEdit" Content="Редактировать" Click="btnEdit_Click" Margin="5" Padding="10,5"
                    ToolTip="Редактировать выбранного партнера"/>
            <Button x:Name="btnDelete" Content="Удалить" Click="btnDelete_Click" Margin="5" Padding="10,5"
                    ToolTip="Удалить выбранного партнера"
                    Background="#FFE74C3C" Foreground="White"/>
            <Button x:Name="btnShowProducts" Content="Предлагаемая продукция" Click="btnShowProducts_Click" 
                    Margin="5" Padding="10,5" Background="#FF2ECC71" Foreground="White"
                    ToolTip="Просмотр предлагаемой продукции для выбранного партнера"/>
        </StackPanel>

        <!-- Список партнеров -->
        <DataGrid Grid.Row="1" x:Name="dgPartners" AutoGenerateColumns="False" 
                 SelectionMode="Single" IsReadOnly="True"
                 MouseDoubleClick="dgPartners_MouseDoubleClick"
                 CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="40"/>
                <DataGridTextColumn Header="Тип партнера" Binding="{Binding TypeName}" Width="120"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Директор" Binding="{Binding Director}" Width="150"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding Adress}" Width="200"/>
                <DataGridTextColumn Header="Рейтинг" Binding="{Binding Rating}" Width="70"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding NumberPartner}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding email}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статусная строка -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="statusText" Text="Готово"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="|"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding Items.Count, ElementName=dgPartners, StringFormat='Всего партнеров: {0}'}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>